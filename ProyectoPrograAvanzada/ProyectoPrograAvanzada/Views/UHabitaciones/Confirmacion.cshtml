
@{
    ViewBag.Title = "Confirmacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office">
<head>
    <meta charset="utf-8"> <!-- utf-8 works for most cases -->
    <meta name="viewport" content="width=device-width"> <!-- Forcing initial-scale shouldn't be necessary -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Use the latest (edge) version of IE rendering engine -->
    <meta name="x-apple-disable-message-reformatting">  <!-- Disable auto-scale in iOS 10 Mail entirely -->
    <title></title> <!-- The title tag shows in email notifications, like Android 4.4. -->

    <style>
        .primary {
            background: #30e3ca;
        }

        .bg_white {
            background: #ffffff;
        }

        .bg_light {
            background: #fafafa;
        }

        .bg_black {
            background: #000000;
        }

        .bg_dark {
            background: rgba(0,0,0,.8);
        }

        .email-section {
            padding: 2.5em;
        }

        /*BUTTON*/
        .btn {
            padding: 10px 15px;
            display: inline-block;
        }

            .btn.btn-primary {
                border-radius: 5px;
                background: #74ca0f;
                color: #ffffff;
                padding-left: 32px;
                padding-right: 32px;
            }


        h1, h2, h3, h4, h5, h6 {
            font-family: 'Lato', sans-serif;
            color: #000000;
            margin-top: 0;
            font-weight: 400;
        }

        

        a {
            color: #30e3ca;
        }

        /*HERO*/
        .hero .text {
            color: rgba(0,0,0,.3);
        }

            .hero .text h2 {
                color: #000;
                font-size: 32px;
                margin-bottom: 0;
                line-height: 1.4;
            }

            .hero .text h3 {
                font-size: 24px;
                font-weight: 100;
            }

            .hero .text h2 span {
                font-weight: 100;
                color: #74ca0f;
            }

    </style>
</head>

<body>
    <center>
        <div style="max-width: 1030px; margin: 0 auto;" class="email-container">
            <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: auto;">
                <tr>
                    <td class="hero bg_white" style="display: flex;padding: 5em 0px 3em 18px;">
                        <img src="~/Estilos/img/verde.png" style="width: 240px; margin:auto">

                        <div class="text" style="padding: 49px 2.5em; margin-top: 27px; text-align: center;">
                            <h2>
                                Confirma tu Reserva en tu Correo Electrónico
                                <br>
                                <span>Donde podrás ver toda la información detallada</span>
                            </h2>
                            <br>
                            <br>
                            <p><a href="@Url.Action("PaginaPrincipal","Inicio")" class="btn btn-primary">Volver</a></p>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </center>
</body>
</html>
