@model List<ProyectoPrograAvanzada.Entidades.Opiniones>

@{
    ViewBag.Title = "MostrarOpiniones";
}

<div class="card shadow mb-4 mt-5">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align: center;">Opiniones</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <div style="margin-bottom:1%; text-align:right">
                        <a class="btn btn-primary" href="@Url.Action("RegistrarOpiniones","Opiniones")"> + Agregar</a>
                    </div>
                    <style>


                        .card-title {
                            background-color: #7AB730;
                            color: white;
                            padding: 10px;
                            margin-bottom: 10px;
                            text-align: center;
                            border-radius: 3%;
                        }

                        .card-content {
                            padding: 10px;
                            text-align: center;
                        }
                    </style>

                    <div class="row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6">
                            @for (var i = 0; i < Model.Count; i += 3)
                            {
                                <div class="row mt-3">
                                    @for (var j = i; j < Math.Min(i + 3, Model.Count); j++)
                                    {
                                        var item = Model[j];
                                        <div class="col-md-4">
                                            <div class="card card-square shadow" style="border-radius: 0;">
                                                <div class="card-title">
                                                    <h5>ID de la Opinion: @item.Id_opinon</h5>
                                                </div>
                                                <div class="card-content">
                                                    <p><strong>ID del Usuario:</strong> @item.id_usuario</p>
                                                    <p><strong>ID de la reserva:</strong> @item.ID_reserva</p>
                                                    <p><strong>Opinion acerca de la reserva:</strong></p>
                                                    <p>@item.opinion_texto</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
</div>
